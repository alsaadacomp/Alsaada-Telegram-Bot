{
  "name": "telegram-bot-template",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Telegram bot starter template",
  "imports": {
    "#root/*": "./src/*"
  },
  "author": "deptyped <deptyped@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc",
    "build": "tsc --noEmit false",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/modules",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e",
    "test:performance": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance",
    "test:runner": "tsx ./scripts/test-runner.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx ./prisma/seed.ts",
    "seed:branches-projects": "tsx ./scripts/seed-branches-projects.ts",
    "migrate:join-request-data": "tsx ./scripts/migrate-join-request-data.ts",
    "seed:notification-templates": "tsx ./scripts/seed-notification-templates.ts",
    "add:more-data": "tsx ./scripts/add-more-data.ts",
    "test:cache-timeout": "tsx ./scripts/test-cache-timeout.ts",
    "predev": "npm run prisma:generate",
    "dev:bot": "tsc-watch --onSuccess \"tsx ./src/main.ts\"",
    "dev": "concurrently --kill-others \"npm run dev:bot\" \"npm run prisma:studio\"",
    "prestart": "npm run prisma:generate && npm run prisma:migrate:prod",
    "start": "tsc && tsx ./src/main.ts",
    "start:force": "tsx ./src/main.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@grammyjs/auto-chat-action": "0.1.1",
    "@grammyjs/commands": "1.0.5",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/hydrate": "1.4.1",
    "@grammyjs/i18n": "1.1.2",
    "@grammyjs/parse-mode": "1.11.1",
    "@grammyjs/runner": "2.0.3",
    "@grammyjs/types": "3.19.0",
    "@hono/node-server": "1.13.8",
    "@prisma/client": "^6.18.0",
    "@types/sharp": "^0.31.1",
    "callback-data": "1.1.1",
    "exceljs": "^4.4.0",
    "grammy": "1.35.0",
    "hono": "^4.10.0",
    "iso-639-1": "3.1.5",
    "jimp": "^1.6.0",
    "pino": "^9.13.1",
    "pino-pretty": "13.0.0",
    "qrcode-reader": "^1.0.4",
    "sharp": "^0.34.4",
    "tsx": "4.19.3",
    "valibot": "0.42.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^15.4.3",
    "prisma": "^6.17.1",
    "ts-jest": "^29.4.5",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "lint-staged": {
    "*.ts": "eslint"
  }
}
